<UserControl x:Class="BauphysikToolWPF.UI.FO2_Temperature"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BauphysikToolWPF.UI"
      xmlns:vm="clr-namespace:BauphysikToolWPF.UI.ViewModels"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <!--Main Reference for all Bindings in this UserControl-->
    <UserControl.DataContext>
        <vm:LiveChartsViewModel/>
    </UserControl.DataContext>
    

    <Grid Background="#EDEDED" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height=".75*" />
            <RowDefinition Height=".25*" />
        </Grid.RowDefinitions>

        <lvc:CartesianChart
            Grid.Row="0"
            Series="{Binding TempCurve}"
            Sections="{Binding Layers}"
            XAxes="{Binding XAxes}"
            YAxes="{Binding YAxes}"   
            EasingFunction="{x:Null}"
            TooltipPosition="Top"
            TooltipBackgroundPaint="{Binding TooltipBackgroundPaint}"
            TooltipTextPaint="{Binding TooltipTextPaint}"
            TooltipTextSize="16"
            Background="White">
            <!--
            
            LegendPosition="Left"
            LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
            LegendTextPaint="{Binding LegendTextPaint}"
            LegendTextSize="16"
            -->
        </lvc:CartesianChart>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Content="{Binding TempCurveCalc.UValue}" ContentStringFormat='U = {0} W/m²K' FontSize="16"/>
            <Label Content="{Binding TempCurveCalc.QValue}" ContentStringFormat='q = {0} W/m²' FontSize="16"/>
            <Label Content="{Binding TempCurveCalc.FRsiValue}" ContentStringFormat='fRsi = {0}' FontSize="16"/>
        </StackPanel>
    </Grid>
</UserControl>
