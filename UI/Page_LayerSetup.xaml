<UserControl x:Class="BauphysikToolWPF.UI.Page_LayerSetup"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:BauphysikToolWPF"
            xmlns:controls="clr-namespace:BauphysikToolWPF.UI.CustomControls"
            xmlns:vm="clr-namespace:BauphysikToolWPF.UI.ViewModels"
            mc:Ignorable="d"
            d:DesignHeight="700"
            d:DesignWidth="1200"
            IsVisibleChanged="UserControl_IsVisibleChanged">

    <UserControl.DataContext>
        <!-- Sets the Data Reference (Source) for 'Binding' in this XAML -->
        <vm:Page_LayerSetup_VM/>
    </UserControl.DataContext>
    
    <!--
    the DataContext is used to specify the data source for a UI element,
    while the ItemsSource is used to specify the data source for a list of items.
    Both can be used for binding to display and modify data in the UI.
    -->
    <UserControl.Resources>
        <controls:DoubleToStringConverter x:Key="DoubleToStringConverter" />
    </UserControl.Resources>

    <!--Main Grid: 2x2-->
    <Grid Background="{StaticResource PrimaryLightBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Top -->
        <Border Background="{StaticResource PrimaryMediumBrush}">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Style="{StaticResource ButtonStyle01_Mini}" Command="{Binding SwitchPageCommand}" CommandParameter="{x:Static local:NavigationContent.LandingPage}" Tag="{StaticResource ButtonIcon_Prev_B}" Margin="4" ToolTip="Zurück zu: Bauteilübersicht"/>
                    <Label Content="Zurück"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Ellipse Fill="{Binding SelectedElement.ColorCode}" Width="20" Height="20" Margin="0,0,8,0"/>
                    <Label Content="{Binding SelectedElement.Name}" FontSize="18" FontWeight="Bold" FontStretch="Expanded"/>
                    <Label Content="{Binding SelectedElement.Construction.TypeName}" ContentStringFormat="({0})" FontSize="18" FontStyle="Italic" Margin="0,0,8,0"/>
                    <Button Style="{StaticResource ButtonStyle01_Mini}" Command="{Binding EditElementCommand}" Tag="{StaticResource ButtonIcon_Edit_B}" Margin="4"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Weiter"/>
                    <Button Style="{StaticResource ButtonStyle01_Mini}" Command="{Binding SwitchPageCommand}" CommandParameter="{x:Static local:NavigationContent.Summary}" Tag="{StaticResource ButtonIcon_Next_B}" Margin="4" ToolTip="Weiter zu: Umgebungsbedingungen"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!--Content Area-->
        <Grid Grid.Row="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height=".55*" MinHeight="240"/>
                <RowDefinition Height=".45*" MinHeight="240"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="320"/>
                <ColumnDefinition Width="360" MaxWidth="440" MinWidth="16"/>
            </Grid.ColumnDefinitions>

            <!--LayerList-->
            <Grid Grid.Row="0" Grid.Column="0" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Content="Schicht hinzufügen"
                            Style="{StaticResource ButtonStyle01_Mini_Highlighted}"
                            Command="{Binding AddLayerCommand}"
                            Tag="{StaticResource ButtonIcon_AddLayer_W}"
                            Margin="0,0,8,0"/>
                    <Button Style="{StaticResource ButtonStyle01_Mini}"
                            Command="{Binding DuplicateLayerCommand}"
                            Tag="{StaticResource ButtonIcon_Copy_B}" 
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsLayerSelected}"
                            ToolTip="Schicht duplizieren"/>
                    <Button Style="{StaticResource ButtonStyle01_Mini}"
                            Command="{Binding MoveLayerUpCommand}"
                            Tag="{StaticResource ButtonIcon_Up_B}"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsLayerSelected}"
                            ToolTip="Schicht eine Lage nach oben verschieben"/>
                    <Button Style="{StaticResource ButtonStyle01_Mini}"
                            Command="{Binding MoveLayerDownCommand}"
                            Tag="{StaticResource ButtonIcon_Down_B}"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsLayerSelected}"
                            ToolTip="Schicht eine Lage nach unten verschieben"/>
                    <Button Style="{StaticResource ButtonStyle01_Mini}"
                            Command="{Binding DeleteLayerCommand}"
                            Tag="{StaticResource ButtonIcon_Delete_B}"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsLayerSelected}"
                            ToolTip="Schicht löschen"/>
                </StackPanel>

                <Label Grid.Row="1" Content="Von innen nach außen:" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="0,8,0,0"/>

                <controls:LayersListView Grid.Row="2" Layers="{Binding LayerList}" SelectedLayer="{Binding SelectedListViewItem}"/>

            </Grid>

            <!-- GridSplitter - Horizontal
            <GridSplitter Grid.Row="1" Grid.Column="0" Height="6" HorizontalAlignment="Stretch" VerticalAlignment="Top" Style="{StaticResource GridSplitterStyle}" />
            -->

            <!--Image-->
            <Grid Grid.Column="0" Grid.Row="1" Margin="16,0,16,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Querschnitt" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <Label Grid.Row="0" Content="Innen" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                    <Label Grid.Row="2" Content="Außen" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                    <Viewbox Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" ClipToBounds="True">
                        <!--Keep Margin to avoid clipping of LayerPosition circles and width measurement numbers!-->
                        <Grid x:Name="ZoomableGrid" Margin="8"
                              MouseWheel="ZoomableGrid_OnMouseWheel"
                              MouseMove="ZoomableGrid_OnMouseMove"
                              MouseRightButtonDown="ZoomableGrid_OnMouseRightButtonDown"
                              MouseLeftButtonDown="ZoomableGrid_OnMouseLeftButtonDown"
                              MouseLeftButtonUp="ZoomableGrid_OnMouseLeftButtonUp"
                              TouchDown="ZoomableGrid_OnTouchDown"
                              TouchMove="ZoomableGrid_OnTouchMove"
                              TouchUp="ZoomableGrid_OnTouchUp"
                              RenderTransformOrigin="0.0,0.0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="GridScaleTransform"/>
                                    <TranslateTransform x:Name="GridTranslateTransform"/>
                                </TransformGroup>
                            </Grid.RenderTransform>

                            <!-- "Layers Canvas" -->
                            <controls:LayersCanvas x:Name="LayersCanvas" Grid.Row="0" Grid.Column="0" Width="{Binding CanvasSize.Width}" Height="{Binding CanvasSize.Height}" DrawingGeometries="{Binding CrossSectionDrawing}"/>

                            <!-- "Vertical Measurement Grid" -->
                            <controls:MeasurementChain Grid.Row="0" Grid.Column="1" Height="{Binding ElementName=LayersCanvas, Path=Height}" DrawingGeometry="{Binding LayerMeasurement}" Margin="32,0,32,0"/>
                            
                            <!-- "Vertical Measurement Grid Full" -->
                            <controls:MeasurementChain Grid.Row="0" Grid.Column="2" Height="{Binding ElementName=LayersCanvas, Path=Height}" DrawingGeometry="{Binding LayerMeasurementFull}" Margin="32,0,32,0"/>

                            <!-- "Horizontal Measurement Grid Test" -->
                            <controls:MeasurementChain Grid.Row="1" Grid.Column="0" Width="{Binding ElementName=LayersCanvas, Path=Width}" DrawingGeometry="{Binding SubConstructionMeasurement}" Margin="0,32,0,32"/>

                        </Grid>
                    </Viewbox>

                </Grid>
                
            </Grid>

            <!--Grid Splitter-->
            <GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="6" Style="{StaticResource GridSplitterStyleDotted}" Margin="-3,16,0,16"/>

            <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--Gewählte Schicht + Eigenschaften-->
                <Expander Grid.Row="0" Header="Schicht-Eigenschaften" IsExpanded="True" Margin="0,8,0,0">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                        <controls:PropertyDataGrid x:Name="LayerPropertiesDataGrid" Properties="{Binding LayerProperties}"/>
                    </ScrollViewer>
                </Expander>

                <Expander Grid.Row="1" Header="Schicht-Balkenlage" IsExpanded="False" IsEnabled="{Binding ShowSubConstructionExpander}" Margin="0,8,0,0">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                        <controls:PropertyDataGrid x:Name="LayerSubConstructionPropertiesDataGrid" Properties="{Binding SubConstructionProperties}"/>
                    </ScrollViewer>
                </Expander>

                <!--Umgebungsbedingungen-->
                <Label Grid.Row="3" Content="Umgebungsrandbedingungen" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="0,8,0,0"/>

                <Expander Grid.Row="4" Header="Innenseite" IsExpanded="True" Margin="0,8,0,0">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                        <Border CornerRadius="8" HorizontalAlignment="Stretch">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--Innenseitige Randbedingungen-->
                                <controls:SubscriptLabel Grid.Row="0" BaseText="θ" SubscriptText="i" AppendText=" - Raumluft" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36" Foreground="Black" FontWeight="DemiBold"/>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                                    <ComboBox ItemsSource="{Binding TiKeys}" SelectedIndex="{Binding TiIndex}" Width="176" Foreground="Black" FontWeight="Normal"/>
                                    <TextBox Text="{Binding TiValue, Converter={StaticResource DoubleToStringConverter}}" PreviewTextInput="numericData_PreviewTextInput" MaxLength="5" Margin="8,0,0,0" Foreground="Black" FontWeight="Normal"/>
                                    <Label Content="°C" Foreground="Black" FontWeight="Normal"/>
                                </StackPanel>
                                <controls:SubscriptLabel Grid.Row="2" BaseText="R" SubscriptText="si" AppendText=" - Übergangswiderstand" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36" Foreground="Black" FontWeight="DemiBold"/>
                                <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                                    <ComboBox ItemsSource="{Binding RsiKeys}" SelectedIndex="{Binding RsiIndex}" Width="176" Foreground="Black" FontWeight="Normal"/>
                                    <TextBox Text="{Binding RsiValue, Converter={StaticResource DoubleToStringConverter}}" PreviewTextInput="numericData_PreviewTextInput" MaxLength="5" Margin="8,0,0,0" Foreground="Black" FontWeight="Normal"/>
                                    <controls:FractionLabel CounterText="m²K" DenominatorText="W" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,-5,0,0" Foreground="Black" FontWeight="Normal"/>
                                </StackPanel>
                                <controls:SubscriptLabel Grid.Row="4" Grid.Column="0" BaseText="Φ" SubscriptText="i" AppendText=" - Rel. Feuchte" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36" Foreground="Black" FontWeight="DemiBold"/>
                                <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom">
                                    <ComboBox ItemsSource="{Binding RelFiKeys}" SelectedIndex="{Binding RelFiIndex}" Width="176" Foreground="Black" FontWeight="Normal"/>
                                    <TextBox Text="{Binding RelFiValue, Converter={StaticResource DoubleToStringConverter}}" PreviewTextInput="numericData_PreviewTextInput" MaxLength="5" Margin="8,0,0,0" Foreground="Black" FontWeight="Normal"/>
                                    <Label Content="%" Foreground="Black" FontWeight="Normal"/>
                                </StackPanel>

                            </Grid>
                        </Border>
                    </ScrollViewer>
                </Expander>

                <Expander Grid.Row="5" Header="Außenseite" IsExpanded="True" Margin="0,8,0,0">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled">
                        <Border CornerRadius="8" HorizontalAlignment="Stretch">
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--Außenseitige Randbedingungen-->
                                <controls:SubscriptLabel Grid.Row="0" BaseText="θ" SubscriptText="e" AppendText=" - Außenluft" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36" Foreground="Black" FontWeight="DemiBold"/>
                                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,8">
                                    <ComboBox ItemsSource="{Binding TeKeys}" SelectedIndex="{Binding TeIndex}" Width="176" Foreground="Black" FontWeight="Normal"/>
                                    <TextBox Text="{Binding TeValue, Converter={StaticResource DoubleToStringConverter}}" PreviewTextInput="numericData_PreviewTextInput" MaxLength="5" Margin="8,0,0,0" Foreground="Black" FontWeight="Normal"/>
                                    <Label Content="°C" Foreground="Black" FontWeight="Normal"/>
                                </StackPanel>
                                <controls:SubscriptLabel Grid.Row="2" BaseText="R" SubscriptText="se" AppendText=" - Übergangswiderstand" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36"  Foreground="Black" FontWeight="DemiBold"/>
                                <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,8">
                                    <ComboBox ItemsSource="{Binding RseKeys}" SelectedIndex="{Binding RseIndex}" Width="176" Foreground="Black" FontWeight="Normal"/>
                                    <TextBox Text="{Binding RseValue, Converter={StaticResource DoubleToStringConverter}}" PreviewTextInput="numericData_PreviewTextInput" MaxLength="5" Margin="8,0,0,0" Foreground="Black" FontWeight="Normal"/>
                                    <controls:FractionLabel CounterText="m²K" DenominatorText="W" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,-5,0,0" Foreground="Black" FontWeight="Normal"/>
                                </StackPanel>
                                <controls:SubscriptLabel Grid.Row="4" BaseText="Φ" SubscriptText="e" AppendText=" - Rel. Feuchte" VerticalAlignment="Top" HorizontalAlignment="Left" Height="36"  Foreground="Black" FontWeight="DemiBold"/>
                                <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom" >
                                    <ComboBox ItemsSource="{Binding RelFeKeys}" SelectedIndex="{Binding RelFeIndex}" Width="176" Foreground="Black" FontWeight="Normal"/>
                                    <TextBox Text="{Binding RelFeValue, Converter={StaticResource DoubleToStringConverter}}" PreviewTextInput="numericData_PreviewTextInput" MaxLength="5" Margin="8,0,0,0" Foreground="Black" FontWeight="Normal"/>
                                    <Label Content="%" Foreground="Black" FontWeight="Normal"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </Expander>

            </Grid>

        </Grid>
        
    </Grid>

</UserControl>
