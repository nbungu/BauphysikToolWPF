<UserControl x:Class="BauphysikToolWPF.UI.FO1_Setup"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:BauphysikToolWPF.UI"  
            xmlns:vm="clr-namespace:BauphysikToolWPF.UI.ViewModels"
            mc:Ignorable="d"
            d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.DataContext>
        <!-- globally sets a reference for Bindings in this xaml-->
        <vm:FO1_ViewModel/>
    </UserControl.DataContext>
    
    <!--
    the DataContext is used to specify the data source for a UI element,
    while the ItemsSource is used to specify the data source for a list of items.
    Both can be used for binding to display and modify data in the UI.
    -->

    <UserControl.Resources>
        <!--
        Defines a Template for the Items in the LayerListView.
        The Bindings are retrieved from the ItemsSource which is set by the backend.
        -->
        <DataTemplate x:Key="LayerListViewTemplate">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.RowSpan="2">
                    <Ellipse Height="32" Width="32" Margin="6" VerticalAlignment="Center" HorizontalAlignment="Center" Fill="{Binding LayerColor}"/>
                    <Label Content="{Binding LayerPosition}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
                <Label Grid.Column="1" Content="{Binding LayerName}" FontWeight="Bold"/>
                <Label Grid.Column="1" Grid.Row="1" Content="{Binding LayerCategory}" FontStyle="Italic" VerticalAlignment="Bottom" />
                <Label Grid.Column="2" Grid.RowSpan="2" Content="{Binding LayerThickness}" ContentStringFormat='d = {0} cm' VerticalAlignment="Center"/>
                <Label Grid.Column="3" Grid.RowSpan="2" Content="{Binding LayerResistance}" ContentStringFormat='Ri = {0} (m²K)/W' VerticalAlignment="Center"/>
            </Grid>
        </DataTemplate>
        
        

        <Style x:Key="TextBoxStyle1" TargetType="TextBox">
            <!--These setters are for the default appearance-->
            <Setter Property="Width" Value="40"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Foreground" Value="Gray"/>
            <EventSetter Event="PreviewTextInput" Handler="numericData_PreviewTextInput"/>
            <!--These setters are for the trigger appearance-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Reference Te_Category_Picker}, Path=Text}" Value="Custom Value">
                    <!--These setters are for the trigger values-->
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TextBoxStyle2" TargetType="TextBox">
            <!--These setters are for the default appearance-->
            <Setter Property="Width" Value="40"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Foreground" Value="Gray"/>
            <EventSetter Event="PreviewTextInput" Handler="numericData_PreviewTextInput"/>
            <!--These setters are for the trigger appearance-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Reference Rse_Category_Picker}, Path=Text}" Value="Custom Value">
                    <!--These setters are for the trigger values-->
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TextBoxStyle3" TargetType="TextBox">
            <!--These setters are for the default appearance-->
            <Setter Property="Width" Value="40"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Foreground" Value="Gray"/>
            <EventSetter Event="PreviewTextInput" Handler="numericData_PreviewTextInput"/>
            <!--These setters are for the trigger appearance-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Reference Ti_Category_Picker}, Path=Text}" Value="Custom Value">
                    <!--These setters are for the trigger values-->
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TextBoxStyle4" TargetType="TextBox">
            <!--These setters are for the default appearance-->
            <Setter Property="Width" Value="40"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Foreground" Value="Gray"/>
            
            <EventSetter Event="PreviewTextInput" Handler="numericData_PreviewTextInput"/>
            <!--These setters are for the trigger appearance-->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Reference Rsi_Category_Picker}, Path=Text}" Value="Custom Value">
                    <!--These setters are for the trigger values-->
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>


    </UserControl.Resources>

    <!--Main Grid: 2x2-->
    <Grid Background="#EDEDED">

        <Grid.RowDefinitions>
            <RowDefinition Height=".6*"/>
            <RowDefinition Height=".4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".4*"/>
            <ColumnDefinition Width=".6*"/>
        </Grid.ColumnDefinitions>

        <!--Top Left Grid -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="16">

            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Aktueller Bauteilaufbau"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8,8,8">

                <Button x:Name="addLayer_Button" Height="32" Click="AddLayerClicked" Margin="0,0,8,0" Padding="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/GL_010x80_create.png" Stretch="Fill" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Layer" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>

                <Button x:Name="deleteLayer_Button" Height="32" Click="DeleteLayerClicked" Margin="0,0,8,0" Padding="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Icons/GL_011x80_delete.png" Stretch="Fill" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="Delete Layer" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="deleteAllLayers_Button" Height="32" Click="deleteAllLayers_Button_Clicked" Content="Delete All" Margin="0,0,8,0" Padding="16, 0, 16, 0"/>

            </StackPanel>

            <ListView x:Name="layers_ListView"
                      Grid.Row="2"
                      ItemTemplate="{StaticResource LayerListViewTemplate}"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Stretch"
                      SelectionChanged="layers_ListView_SelectionChanged"/>
            <!--ItemsSource gets set by backend-->
        </Grid>

        <!--Top Right Grid -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Content="Außen - Linke Seite" HorizontalContentAlignment="Left"/>
            <Label x:Name="layer_Label" Content="-" HorizontalContentAlignment="Center" />
            <Label Content="Innen - Rechte Seite" HorizontalContentAlignment="Right" />

            <Viewbox Grid.Row="1" ClipToBounds="True">
                <!--Canvas inside of ViewBox makes it dynamically sizable-->
                <Canvas x:Name="layers_Canvas" Width="400" Height="200" SnapsToDevicePixels="True"/>
                <!-- Canvas Children defined in backend-->
            </Viewbox>

        </Grid>

        <!--Bottom Right Grid -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Content="Außenseitige Randbedingungen" FontWeight="Bold" Grid.Column="0"/>
            <Label Content="Innenseitige Randbedingungen" FontWeight="Bold" Grid.Column="2"/>

            <!--Außenseitige Randbedingungen-->

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="0,8,8,8">
                <Label Content="Air Temperature: " Width="100"/>
                <ComboBox x:Name="Te_Category_Picker" Width="160" VerticalAlignment="Stretch" SelectionChanged="Te_Category_Picker_SelectedIndexChanged"/>
                <TextBox x:Name="Te_Input" Style="{StaticResource TextBoxStyle1}"/>
                <Label Content="°C"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="0,8,8,8">
                <Label Content="Rse: " Width="100"/>
                <ComboBox x:Name="Rse_Category_Picker" Width="160" VerticalAlignment="Stretch" SelectionChanged="Rse_Category_Picker_SelectedIndexChanged"/>
                <TextBox x:Name="Rse_Input" Style="{StaticResource TextBoxStyle2}"/>
                <Label Content="(m²K)/W"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0" Margin="0,8,8,8">
                <Label Content="Rel. Humitdity: " Width="100"/>
                <ComboBox x:Name="x1_Category_Picker" Width="160" VerticalAlignment="Stretch" />
                <TextBox x:Name="x1_Input" Style="{StaticResource TextBoxStyle2}"/>
                <Label Content="%"/>
            </StackPanel>

            <!--Mittlere Trennlinie-->
            <Line Grid.RowSpan="4" Grid.Column="1" Y2="600" VerticalAlignment="Stretch" HorizontalAlignment="Center" Stroke="SlateGray" StrokeThickness="2"/>

            <!--Innenseitige Randbedingungen-->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" Margin="0,8,8,8">
                <Label Content="Air Temperature: " Width="100"/>
                <ComboBox x:Name="Ti_Category_Picker" Width="160" VerticalAlignment="Stretch" SelectionChanged="Ti_Category_Picker_SelectedIndexChanged"/>
                <TextBox x:Name="Ti_Input" Style="{StaticResource TextBoxStyle3}"/>
                <Label Content="°C" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="0,8,8,8">
                <Label Content="Rsi: " Width="100"/>
                <ComboBox x:Name="Rsi_Category_Picker" Width="160" VerticalAlignment="Stretch" SelectionChanged="Rsi_Category_Picker_SelectedIndexChanged"/>
                <TextBox x:Name="Rsi_Input" Style="{StaticResource TextBoxStyle4}"/>
                <Label Content="(m²K)/W" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="2" Margin="0,8,8,8">
                <Label Content="Rel. Humitdity: " Width="100"/>
                <ComboBox x:Name="x2_Category_Picker" Width="160" VerticalAlignment="Stretch" />
                <TextBox x:Name="x2_Input" Style="{StaticResource TextBoxStyle2}"/>
                <Label Content="%"/>
            </StackPanel>
        </Grid>

        <GridSplitter Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Left" Margin="-1,16,0,16" VerticalAlignment="Stretch" Width="2" Background="SlateGray"/>

    </Grid>

</UserControl>
