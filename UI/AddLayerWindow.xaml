<Window x:Class="BauphysikToolWPF.UI.AddLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BauphysikToolWPF.UI"
        xmlns:controls="clr-namespace:BauphysikToolWPF.UI.CustomControls"
        xmlns:vm="clr-namespace:BauphysikToolWPF.UI.ViewModels"
        xmlns:models="clr-namespace:BauphysikToolWPF.Models"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="AddLayerWindow" Background="{StaticResource PrimaryLightBrush}" Height="488" Width="880">

    <Window.DataContext>
        <!-- AddLayerWindow_VM = Data Reference (Source) for 'Binding' in this XAML -->
        <vm:AddLayerWindow_VM/>
    </Window.DataContext>
    
    <Window.Resources>

        <GridView x:Key="CategoryGridViewColumns" AllowsColumnReorder="false" ColumnHeaderContainerStyle="{StaticResource ListViewHeaderStyle01}">
            <!--Here: Binding source are Items from the ItemsSource Property-->
            <GridViewColumn DisplayMemberBinding="{Binding }" Header="Name" Width="Auto"/>
        </GridView>

        <!--populate the items of a ComboBox with all elements from an enum-->
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="CategoryTypeValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:MaterialCategory"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>

    <Grid Background="{StaticResource PrimaryLightBrush}" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*" MinWidth="160" MaxWidth="480"/>
            <ColumnDefinition Width=".55*" MinWidth="200"/>
            <ColumnDefinition Width=".25*" MinWidth="160" MaxWidth="480"/>
        </Grid.ColumnDefinitions>

        <!--Left Column: Material Category-->
        <Grid Grid.Column="0" Margin="8" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Kategorie Auswahl" FontWeight="Bold" HorizontalAlignment="Left"/>

            <ListView x:Name="CategoryListView"
                      ItemsSource="{Binding Source={StaticResource CategoryTypeValues}}"
                      View="{StaticResource CategoryGridViewColumns}"
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle01}"
                      SelectedItem="{Binding SelectedCategory}"
                      Style="{StaticResource ListViewStyle01}"
                      Grid.Row="1"/>
        </Grid>

        <!--Grid Splitter-->
        <GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left" Margin="-4,8,0,8" VerticalAlignment="Stretch" Width="8" Background="Transparent"/>

        <!--Center Column: Material Selection-->
        <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Margin="8,8,16,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Material Auswahl" FontWeight="Bold" HorizontalAlignment="Left"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,8">
                <TextBox Text="{Binding SearchString}" TextAlignment="Left" MaxLength="320" Width="320" Margin="0,0,8,0"/>
                <Button Tag="{StaticResource ButtonIcon_Cancel_B}" Style="{StaticResource ButtonStyle03_IconMini}" Command="{Binding ResetMaterialListCommand}" Margin="-40,0,8,0"/>
                <Button Content="Suchen" Tag="{StaticResource ButtonIcon_Search_Bold_B}" Style="{StaticResource ButtonStyle03_Mini}" Margin="0,0,8,0"/>
            </StackPanel>

            <controls:MaterialsListView Grid.Row="2" Materials="{Binding Materials}" SelectedMaterial="{Binding SelectedListViewItem, Mode=TwoWay}"/>
        </Grid>

        <!--Grid Splitter-->
        <GridSplitter Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="6" Style="{StaticResource GridSplitterStyleDotted}" Margin="-3,16,0,16"/>

        <!--Right Column: Dimensions-->
        <Grid Grid.Row="2" Grid.Column="2" Margin="16,8,8,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <controls:PropertyDataGrid Grid.Row="0" Properties="{Binding ThicknessProperties}" Background="{StaticResource PrimaryHoverBrush}" Margin="0,8,0,8"/>

            <Button Grid.Row="1"  Content="Übernehmen"
                    Command="{Binding AddLayerCommand}"
                    CommandParameter="{Binding ElementName=AddLayerSubConstructionWindowControl}"
                    Style="{StaticResource ButtonStyle03_A}"
                    Tag="{StaticResource ButtonIcon_AddLayer_W}"/>

        </Grid>

    </Grid>

</Window>
