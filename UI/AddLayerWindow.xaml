<Window x:Class="BauphysikToolWPF.UI.AddLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BauphysikToolWPF.UI"
        xmlns:vm="clr-namespace:BauphysikToolWPF.UI.ViewModels"
        mc:Ignorable="d"
        Title="AddLayerWindow" Background="{StaticResource PrimaryLightBrush}" Height="488" Width="880">

    <Window.DataContext>
        <!-- Sets the Data Reference (Source) for 'Binding' in this XAML -->
        <vm:AddLayerWindow_VM/>
    </Window.DataContext>
    
    <Window.Resources>

        <!--Custom Button04: rounded corners, click effects, materialUI -->
        <Style x:Key="ButtonStyle04" TargetType="{x:Type Button}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="6" Background="{TemplateBinding Background}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Color="LightSlateGray" Opacity=".6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF6DD46D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX=".96" ScaleY=".96" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="Gray"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="1" Color="LightSlateGray" Opacity=".2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="CategoriesListViewTemplate">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!--Here Binding is from: ItemsSource="{Binding DistinctCategories}" -->
                <Label Content="{Binding}" Height="28"/>
            </Grid>
        </DataTemplate>

        <!--
        https://learn.microsoft.com/en-us/dotnet/desktop/wpf/controls/gridview-overview?view=netframeworkdesktop-4.8
        https://github.com/mochan-b/GridViewCellFormatting
        Links the data content to a ListViewItem via Binding from ItemsSource, INSTEAD of ItemTemplate
        -->
        <GridView x:Key="MaterialGridViewColumns" AllowsColumnReorder="true" ColumnHeaderContainerStyle="{StaticResource ListViewHeaderStyle01}">
            <!--Here: Binding source are Items (typeof 'Material') from the ItemsSource Property-->
            <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Materialname" Width="Auto"/>
            <GridViewColumn DisplayMemberBinding="{Binding BulkDensity}" Header="ρ [kg/m³]" Width="Auto"/>
            <GridViewColumn DisplayMemberBinding="{Binding ThermalConductivity}" Header="λ [W/(m·K)]" Width="Auto"/>
            <GridViewColumn DisplayMemberBinding="{Binding SpecificHeatCapacity}" Header="c [J/(kg·K)]" Width="Auto"/>
            <GridViewColumn DisplayMemberBinding="{Binding DiffusionResistance}" Header="µ (trocken) [-]" Width="Auto"/>
        </GridView>

    </Window.Resources>

    <Grid Background="{StaticResource PrimaryLightBrush}" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".25*"/>
            <ColumnDefinition Width=".75*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="8" Grid.RowSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Kategorie Auswahl" FontWeight="Bold" HorizontalAlignment="Left"/>

            <ListView x:Name="collectionView_Categories"
                      ItemsSource="{Binding DistinctCategories}"
                      ItemTemplate="{StaticResource CategoriesListViewTemplate}"
                      SelectionMode="Single"
                      SelectedItem="{Binding SelectedCategory}"
                      ScrollViewer.CanContentScroll="False"
                      Grid.Row="1"/>
        </Grid>
        
        <Grid Grid.Row="0" Grid.Column="1" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Material Auswahl" FontWeight="Bold" HorizontalAlignment="Left"/>

            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".7*"/>
                    <ColumnDefinition Width=".3*"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding SearchString}" TextAlignment="Left"/>
                <Button Grid.Column="1" Content="Material erstellen" Command="{Binding CreateMaterialCommand}" Style="{StaticResource ButtonStyle04}" Margin="8,0,0,0"/>
            </Grid>

            <ListView x:Name="materials_ListView"
                      Grid.Row="2"
                      ItemsSource="{Binding Materials}"
                      View="{StaticResource MaterialGridViewColumns}"
                      ItemContainerStyle="{StaticResource ListViewItemContainerStyle01}"
                      Style="{StaticResource ListViewStyle01}"/>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="8">
            <Label Content="Schichtdicke angeben: " FontWeight="Bold" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding Thickness}" MaxLength="5" PreviewTextInput="numericData_PreviewTextInput"/>
            <Label Content="cm" FontWeight="SemiBold"/>
        </StackPanel>

        <Grid Grid.Column="1" Grid.Row="2" Margin="8">
            <Button Content="Schicht dem Bauteil hinzufügen" Command="{Binding AddLayerCommand}" CommandParameter="{Binding SelectedItem, ElementName=materials_ListView}" Style="{StaticResource ButtonStyle04}"/>
        </Grid>

    </Grid>

</Window>
