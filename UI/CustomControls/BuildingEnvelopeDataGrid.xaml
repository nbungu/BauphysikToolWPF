<UserControl x:Class="BauphysikToolWPF.UI.CustomControls.BuildingEnvelopeDataGrid"
             x:Name="BuildingEnvelopeDataGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converter="clr-namespace:BauphysikToolWPF.Services.UI.Converter"
             xmlns:customControls="clr-namespace:BauphysikToolWPF.UI.CustomControls"
             xmlns:vm="clr-namespace:BauphysikToolWPF.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="400"
             d:DesignWidth="1600"
             d:Background="White">

    <UserControl.Resources>

        <converter:NumberConverter x:Key="NumberConverter"/>
        <converter:TooltipNotEmptyToVisibilityConverter x:Key="TooltipNotEmptyToVisibilityConverter"/>

        <ObjectDataProvider x:Key="OrientationTypeNames"
                            MethodName="GetOrientationTypeNames"
                            ObjectType="{x:Type vm:Page_BuildingEnvelope_VM}"/>

        <ObjectDataProvider x:Key="UsageZoneNames"
                            MethodName="GetUsageZoneNames"
                            ObjectType="{x:Type vm:Page_BuildingEnvelope_VM}"/>

        <ObjectDataProvider x:Key="ElementListValues"
                            MethodName="GetElements"
                            ObjectType="{x:Type vm:Page_BuildingEnvelope_VM}"/>

        <ObjectDataProvider x:Key="TransmissionTransferTypeNames"
                            MethodName="GetTransmissionTransferTypeNames"
                            ObjectType="{x:Type vm:Page_BuildingEnvelope_VM}"/>

        <Style x:Key="RoundIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="{StaticResource PrimaryMediumBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Circular shape -->
                            <Ellipse Fill="{TemplateBinding Background}" />

                            <!-- Embedded plus icon using a Path -->
                            <Path Data="M0,5 L10,5 M5,0 L5,10"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  Width="10"
                                  Height="10"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHighlightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundIconButtonStyle_Highlighted" BasedOn="{StaticResource RoundIconButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryHighlightBrush}"/>
        </Style>

        <Style x:Key="DataGridTextColumn_Numeric_ElementStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="3,0,0,0"/>
            <Setter Property="Cursor" Value="IBeam"/>
        </Style>
        <Style x:Key="DataGridTextColumn_Numeric_EditingStyle" TargetType="TextBox" BasedOn="{StaticResource DataGridTextBox}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <EventSetter Event="PreviewTextInput" Handler="numericData_PreviewTextInput"/>
        </Style>

        <Style x:Key="DataGridTextColumn_ElementStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Padding" Value="3,0,0,0"/>
            <Setter Property="Cursor" Value="IBeam"/>
        </Style>
        <Style x:Key="DataGridTextColumn_EditingStyle" TargetType="TextBox" BasedOn="{StaticResource DataGridTextBox}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <EventSetter Event="PreviewTextInput" Handler="textData_PreviewTextInput"/>
        </Style>

        <Style x:Key="BuildingEnvelopeDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource PrimaryBorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource PrimaryBorderBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGrid">
                        <Border
                            x:Name="DGBorder"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">

                            <ScrollViewer x:Name="PART_ScrollViewer" Focusable="false" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    
                                    <!-- THIS IS WHAT RENDERS COLUMN HEADERS -->
                                    <DataGridColumnHeadersPresenter x:Name="PART_ColumnHeadersPresenter" />

                                    <!-- THIS IS WHAT RENDERS DATA ROWS -->
                                    <ItemsPresenter />

                                    <!-- Custom UI at the bottom of the DataGrid -->
                                    <Border x:Name="CustomBottomArea"
                                            Background="Transparent"
                                            Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- First Button -->
                                            <Button x:Name="FirstButton" Style="{StaticResource RoundIconButtonStyle_Highlighted}" ToolTip="Erstellt neuen Raum" Command="{Binding DataContext.AddEnvelopeItemRoomCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" VerticalAlignment="Center" Cursor="Hand"/>

                                            <!-- Second Button -->
                                            <Button Grid.Column="1" Style="{StaticResource RoundIconButtonStyle}" ToolTip="Erstellt neuen Bereich der thermischen Hüllfläche, zugehörig zum aktuellen Raum" Command="{Binding DataContext.AddEnvelopeItemCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" Margin="16,0,0,0" VerticalAlignment="Center" Cursor="Hand"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Items.Count}" Value="0">
                                <Setter TargetName="CustomBottomArea" Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="SortableHeaderTemplate" TargetType="DataGridColumnHeader">
            <Grid>
                <Border
                    x:Name="HeaderBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{StaticResource PrimaryBorderBrush}"
                    BorderThickness="1,0,0,2"
                    Margin="0"
                    Padding="4"
                    Tag="{TemplateBinding Tag}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>

                        <ContentPresenter Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" RecognizesAccessKey="True"/>
                        
                        <Path x:Name="SortArrow"
                              Grid.Row="1"
                              Style="{StaticResource SortArrowPathStyle}"
                              Visibility="Collapsed" 
                              HorizontalAlignment="Right"
                              Margin="0,0,2,0"
                              Opacity="0.7"
                              Fill="{TemplateBinding Foreground}"/>
                        
                        <customControls:FractionLabel Grid.Row="1"
                                                      CounterText="{TemplateBinding Tag}"
                                                      VerticalAlignment="Center"
                                                      Foreground="{StaticResource PrimaryDarkMediumBrush}"
                                                      Margin="0,4,0,0"
                                                      FontWeight="DemiBold"
                                                      HorizontalAlignment="Left"/>
                        <Image x:Name="HoverIcon"
                               Grid.Row="0"
                               Source="{StaticResource ButtonIcon_Info_B}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Stretch="Fill"
                               Width="12" Height="12"
                               Opacity="0.7"
                               Margin="2"
                               Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ToolTip, Converter={StaticResource TooltipNotEmptyToVisibilityConverter}}"/>
                    </Grid>
                </Border>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}" />
                </Trigger>
                <Trigger Property="SortDirection" Value="Ascending">
                    <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="SortArrow" Property="RenderTransform">
                        <Setter.Value>
                            <RotateTransform Angle="0" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="SortDirection" Value="Descending">
                    <Setter TargetName="SortArrow" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="SortArrow" Property="RenderTransform">
                        <Setter.Value>
                            <RotateTransform Angle="180" CenterX="4" CenterY="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Disabled"
                  HorizontalScrollBarVisibility="Auto"
                  CanContentScroll="False"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Fake extra header row -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="38"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="132"/>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Grid.ColumnSpan="4" Background="{StaticResource SecondaryLightBlueBrush}" BorderThickness="1,1,1,0" BorderBrush="{StaticResource PrimaryBorderBrush}">
                    <TextBlock Text="Info" HorizontalAlignment="Center" Padding="4"/>
                </Border>
                <Border Grid.Column="4" Grid.ColumnSpan="6" Background="{StaticResource SecondaryLightYellowBrush}" BorderThickness="0,1,1,0" BorderBrush="{StaticResource PrimaryBorderBrush}">
                    <TextBlock Text="Bauteil" HorizontalAlignment="Center" Padding="4"/>
                </Border>
                <Border Grid.Column="10" Grid.ColumnSpan="3" Background="{StaticResource SecondaryLightGreenBrush}" BorderThickness="0,1,1,0" BorderBrush="{StaticResource PrimaryBorderBrush}">
                    <TextBlock Text="Netto Raum" HorizontalAlignment="Center" Padding="4"/>
                </Border>
                <Border Grid.Column="13" Grid.ColumnSpan="3" Background="{StaticResource SecondaryLightGreenBrush}" BorderThickness="0,1,1,0" BorderBrush="{StaticResource PrimaryBorderBrush}">
                    <TextBlock Text="Brutto Raum" HorizontalAlignment="Center" Padding="4"/>
                </Border>
                <Border Grid.Column="16" Background="{StaticResource PrimaryLightBrush}" BorderThickness="0,1,1,0" BorderBrush="{StaticResource PrimaryBorderBrush}"/>
            </Grid>

            <DataGrid Grid.Row="1"
                      x:Name="BuildingEnvelopeDataGridElement"
                      Style="{StaticResource BuildingEnvelopeDataGridStyle}"
                      ItemsSource="{Binding EnvelopeItems, ElementName=BuildingEnvelopeDataGridControl}"
                      SelectedItem="{Binding SelectedEnvelopeItem, ElementName=BuildingEnvelopeDataGridControl}"
                      PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="Black" />
                        <Style.Triggers>
                            <!-- IsSelected of a cell extends to the whole row! -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="FontWeight" Value="DemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Margin" Value="1,0,-1,0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RoomGroupColorIndex}" Value="0">
                                <Setter Property="Background" Value="White"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RoomGroupColorIndex}" Value="1">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                <!-- Light blueish -->
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    
                    <!-- IsSelected Arrow Column -->
                    <DataGridTemplateColumn Width="36" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding RoomNumber}" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="Black"
                                               Margin="8,0,0,0"
                                               IsEnabled="{Binding ShowRoomData}"
                                               Visibility="{Binding ShowRoomDataVisibility}"/>
                                    <Path Grid.Column="1"
                                          Data="M 0 0 L 6 5 L 0 10 Z"
                                          Fill="{StaticResource PrimaryDarkBrush}"
                                          Stretch="Uniform"
                                          Width="8"
                                          Height="10"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="{Binding IsSelectedArrowVisibility}"/>
                                </Grid>
                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>

                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Nr." Margin="8,0,0,0" />
                                <!-- Leave header blank or insert a hint icon -->
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorderBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="Background" Value="{StaticResource SecondaryLightBlueBrush}"/>
                                <Setter Property="ToolTip" Value="Raumnummer"/>
                            </Style>
                        </DataGridTemplateColumn.HeaderStyle>
                    </DataGridTemplateColumn>

                    <!-- Etage Column -->
                    <DataGridTextColumn Header="Etage"
                                        Width="80"
                                        Binding="{Binding FloorLevel}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextColumn_ElementStyle}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox" BasedOn="{StaticResource DataGridTextColumn_EditingStyle}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightBlueBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Raumbezeichnung Column -->
                    <DataGridTextColumn Header="Raumbezeichnung"
                                        Width="120"
                                        Binding="{Binding RoomName}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextColumn_ElementStyle}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox" BasedOn="{StaticResource DataGridTextColumn_EditingStyle}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightBlueBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Zone Column -->
                    <DataGridComboBoxColumn x:Name="EnvelopeItem_ZoneSelectionColumn"
                                            Header="Zone"
                                            SelectedItemBinding="{Binding UsageZoneName}"
                                            ItemsSource="{Binding Source={StaticResource UsageZoneNames}}"
                                            Width="120">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                        <DataGridComboBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightBlueBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                                <Setter Property="ToolTip" Value="Merkmal einer Zone: gleiche Nutzung und gleiche Art der Konditionierung. Zonierung nur bei Nichtwohngebäuden erforderlich!"/>
                            </Style>
                        </DataGridComboBoxColumn.HeaderStyle>
                    </DataGridComboBoxColumn>

                    <!-- Bauteil Column -->
                    <DataGridComboBoxColumn x:Name="EnvelopeItem_ElementSelectionColumn"
                            Header="zugehöriges Bauteil"
                            SelectedItemBinding="{Binding Element, UpdateSourceTrigger=PropertyChanged}"
                            ItemsSource="{Binding Source={StaticResource ElementListValues}}"
                            DisplayMemberPath="Name"
                            Width="132"
                            MinWidth="80">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}">
                                <Setter Property="DisplayMemberPath" Value="Name"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}">
                                <Setter Property="DisplayMemberPath" Value="Name"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>

                        <DataGridComboBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightYellowBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                            </Style>
                        </DataGridComboBoxColumn.HeaderStyle>
                    </DataGridComboBoxColumn>
                    
                    <!-- U-Wert Column -->
                    <DataGridTextColumn x:Name="EnvelopeItem_UValueColumn"
                                        Header="U-Wert"
                                        Binding="{Binding UValue, Converter={StaticResource NumberConverter}, ConverterParameter=3, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                        Width="72"
                                        ElementStyle="{StaticResource DataGridTextColumn_Numeric_ElementStyle}"
                                        EditingElementStyle="{StaticResource DataGridTextColumn_Numeric_EditingStyle}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Tag" Value="W/(m²K)"/>
                                <Setter Property="Background" Value="{StaticResource SecondaryLightYellowBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Fläche Column -->
                    <DataGridTextColumn Header="Fläche"
                                        Binding="{Binding EnvelopeArea, Converter={StaticResource NumberConverter}}"
                                        Width="88"
                                        ElementStyle="{StaticResource DataGridTextColumn_Numeric_ElementStyle}"
                                        EditingElementStyle="{StaticResource DataGridTextColumn_Numeric_EditingStyle}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Tag" Value="m²"/>
                                <Setter Property="Background" Value="{StaticResource SecondaryLightYellowBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                                <Setter Property="ToolTip" Value="Wärmeübertragende Umfassungsfläche eines Bauteils. Bei Außenbauteilen: Außenmaße. Bei Innenbauteilen zwischen einer temperierten und einer nicht temperierten Zone: Außenmaß der temperierten Zone. Bei Innenbauteilen zwischen zwei (unterschiedlich) temperierten Zonen: Mitte des Rohbaus. Als Maße von Fenstern und Türen werden die lichten inneren Rohbauöffnungen angesetzt. Bauteile zwischen Zonen bis 4 K Solltemperaturunterschied dürfen vernachlässigt werden."/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!--Fx Column-->
                    <DataGridTextColumn Header="Fx"
                                        Binding="{Binding FxValue, Converter={StaticResource NumberConverter}}"
                                        Width="88"
                                        ElementStyle="{StaticResource DataGridTextColumn_Numeric_ElementStyle}"
                                        EditingElementStyle="{StaticResource DataGridTextColumn_Numeric_EditingStyle}">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Tag" Value="-"/>
                                <Setter Property="Background" Value="{StaticResource SecondaryLightYellowBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                                <Setter Property="ToolTip" Value="Temperatur-Korrekturfaktor: Für alle Bauteilflächen, die an die Außenluft grenzen, ist der Fx-Wert = 1,0. Für alle anderen, wird ein Temperatur-Korrekturfaktor ungleich 1,0 berücksichtigt."/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Transmissionsart Column -->
                    <DataGridComboBoxColumn x:Name="EnvelopeItem_TransmissionTransferTypeColumn"
                                            Header="Transmissionsart"
                                            SelectedItemBinding="{Binding TransmissionTransferTypeName}"
                                            ItemsSource="{Binding Source={StaticResource TransmissionTransferTypeNames}}"
                                            Width="120">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}"/>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}"/>
                        </DataGridComboBoxColumn.EditingElementStyle>
                        <DataGridComboBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightYellowBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                                <Setter Property="ToolTip" Value="Relevant für Anrechnung des Fx-Wertes."/>
                            </Style>
                        </DataGridComboBoxColumn.HeaderStyle>
                    </DataGridComboBoxColumn>

                    <!-- Ausrichtung Column -->
                    <DataGridComboBoxColumn x:Name="EnvelopeItem_OrientationSelectionColumn"
                                            Header="Ausrichtung"
                                            SelectedItemBinding="{Binding OrientationTypeName}"
                                            ItemsSource="{Binding Source={StaticResource OrientationTypeNames}}"
                                            Width="88">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}"/>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource DataGridComboBox}"/>
                        </DataGridComboBoxColumn.EditingElementStyle>
                        <DataGridComboBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightYellowBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
                                <Setter Property="ToolTip" Value="Relevant für Berechnung des sommerlichen Wärmeschutzes."/>
                            </Style>
                        </DataGridComboBoxColumn.HeaderStyle>
                    </DataGridComboBoxColumn>

                    <!-- Netto Höhe Column -->
                    <DataGridTextColumn Header="Höhe"
                                        Width="88"
                                        Binding ="{Binding RoomHeightNet, Converter={StaticResource NumberConverter}}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource DataGridTextColumn_Numeric_ElementStyle}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.EditingElementStyle>
                            <Style TargetType="TextBox" BasedOn="{StaticResource DataGridTextColumn_Numeric_EditingStyle}">
                                <Setter Property="IsEnabled" Value="{Binding ShowRoomData}"/>
                                <Setter Property="Visibility" Value="{Binding ShowRoomDataVisibility}"/>
                            </Style>
                        </DataGridTextColumn.EditingElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Tag" Value="m"/>
                                <Setter Property="Background" Value="{StaticResource SecondaryLightGreenBrush}"/>
                                <Setter Property="Template" Value="{StaticResource SortableHeaderTemplate}"/>
