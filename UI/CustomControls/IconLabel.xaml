<UserControl x:Class="BauphysikToolWPF.UI.CustomControls.IconLabel"
             x:Name="IconLabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:BauphysikToolWPF.UI.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>

        

    </UserControl.Resources>


    <Grid>
        <Border x:Name="ContainerBorder"
                
                CornerRadius="4"
                Padding="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image x:Name="Icon" Width="16" Height="16" VerticalAlignment="Center" Margin="8,0,8,0"/>
                <Label x:Name="Label" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,8,0"/>
            </Grid>
        </Border>
    </Grid>


</UserControl>
